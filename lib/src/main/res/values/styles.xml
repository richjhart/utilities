<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RjhsAlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert" />

    <style name="RjhsPopupTextStyle" parent="@android:style/TextAppearance.DeviceDefault" />

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:actionModeBackground">@color/colorAccent</item>
        <item name="actionModeBackground">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CustomAlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/main_background</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="TextNormal" parent="@android:style/TextAppearance.DeviceDefault" >
        <item name="android:textColor">@color/rjhs_color_state_default_text</item>
    </style>

    <style name="TextSmall" parent="@android:style/TextAppearance.DeviceDefault.Small" >
        <item name="android:textColor">@color/rjhs_color_state_default_text</item>
    </style>

    <style name="TextMedium" parent="@android:style/TextAppearance.DeviceDefault.Medium" >
        <item name="android:textColor">@color/rjhs_color_state_default_text</item>
    </style>

    <style name="TextLarge" parent="@android:style/TextAppearance.DeviceDefault.Large" >
        <item name="android:textColor">@color/rjhs_color_state_default_text</item>
    </style>

    <style name="TextSettingsCategory">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="TextSettingsTitle" parent="@style/TextNormal" />

    <style name="TextSettingsDetails" parent="@style/TextSmall" />

    <style name="noAnimTheme" parent="AppTheme.NoActionBar">
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="ThemeOverlay.StandardButton" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorButtonNormal">@color/rjhs_color_state_button_background</item>
        <item name="android:textColor">@color/rjhs_color_state_button_text</item>
    </style>

    <style name="ThemeOverlay.TransparentButton" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorButtonNormal">@color/transparent</item>
        <item name="android:textColor">@color/rjhs_color_state_button_background</item>
    </style>

    <style name="HorizontalBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@color/horizontal_bar</item>
    </style>

</resources>