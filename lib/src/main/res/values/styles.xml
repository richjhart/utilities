<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RjhsAlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert" />

    <style name="RjhsPopupTextStyle" parent="@android:style/TextAppearance.DeviceDefault" />

    <!-- Base application theme. -->
    <style name="RjhsAppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/rjhs_color_primary</item>
        <item name="colorPrimaryDark">@color/rjhs_color_primary_dark</item>
        <item name="colorAccent">@color/rjhs_color_accent</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:actionModeBackground">@color/rjhs_color_accent</item>
        <item name="actionModeBackground">@color/rjhs_color_accent</item>
    </style>

    <style name="RjhsAppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="RjhsCustomAlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/rjhs_color_main_background</item>
    </style>

    <style name="RjhsAppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
    </style>

    <style name="RjhsAppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="RjhsTextNormal" parent="@android:style/TextAppearance.DeviceDefault" >
        <item name="android:textColor">@color/rjhs_color_state_default_text</item>
    </style>

    <style name="RjhsTextSmall" parent="@android:style/TextAppearance.DeviceDefault.Small" >
        <item name="android:textColor">@color/rjhs_color_state_default_text</item>
    </style>

    <style name="RjhsTextMedium" parent="@android:style/TextAppearance.DeviceDefault.Medium" >
        <item name="android:textColor">@color/rjhs_color_state_default_text</item>
    </style>

    <style name="RjhsTextLarge" parent="@android:style/TextAppearance.DeviceDefault.Large" >
        <item name="android:textColor">@color/rjhs_color_state_default_text</item>
    </style>

    <style name="RjhsTextSettingsCategory">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/rjhs_color_accent</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="RjhsTextSettingsTitle" parent="@style/RjhsTextNormal" />

    <style name="RjhsTextSettingsDetails" parent="@style/RjhsTextSmall" />

    <style name="RjhsAppTheme.NoAnim" parent="RjhsAppTheme.NoActionBar">
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="RjhsThemeOverlay.StandardButton" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorButtonNormal">@color/rjhs_color_state_button_background</item>
        <item name="android:textColor">@color/rjhs_color_state_button_text</item>
    </style>

    <style name="RjhsThemeOverlay.TransparentButton" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorButtonNormal">@android:color/transparent</item>
        <item name="android:textColor">@color/rjhs_color_state_button_background</item>
    </style>

    <style name="RjhsHorizontalBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">@color/rjhs_color_horizontal_bar</item>
    </style>

</resources>